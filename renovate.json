{
  "extends": [
    "config:base"
  ],
  "major": {
    "automerge": true
  },
  "automerge": true,
  "branchPrefix": "deps/",
  "rebaseStalePrs": true,
  "separateMajorMinor": false,
  "semanticCommits": true,
  "semanticPrefix": "chore",
  "commitMessage": "{{semanticPrefix}} update {{depName}} to version {{newVersion}}",
  "rangeStrategy": "replace",
  "labels": [
    "deps"
  ],
  "schedule": "every weekend",
  "packageFiles": [
    "package.json",
    "packages/**/package.json"
  ],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "enabled": false
    },
    {
      "packagePattern": "^@angular\/.*",
      "groupName": "angular"
    },
    {
      "packagePattern": "^@angular-devkit\/.*",
      "groupName": "angular devkit"
    },
    {
      "packagePattern": "^@ionic\/.*",
      "groupName": "ionic"
    },
    {
      "packagePattern": "^@types\/.*",
      "groupName": "type definitions"
    },
    {
      "packagePattern": "^jasmine.*",
      "groupName": "jasmine"
    },
    {
      "packagePattern": "^karma.*",
      "groupName": "karma"
    },
    {
      "packageNames": [
        "typescript"
      ],
      "updateTypes": "patch"
    }
  ],
  "ignoreDeps": [
    "@types/node",
    "core-js"
  ]
}